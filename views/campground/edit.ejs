<%- include("../partials/header") %>
<style>
	.forms{
		width:30%;
		margin:30px auto;		
	}
</style>
<div class="container text-center">
	<h1>Edit <%=found.name%></h1>
	<div class="forms">
	<div class="row">
		<form action="/campground/<%=found._id%>?_method=PUT" method="post">
			<div class="form-group">
			<input class="form-control" type="text" name="details[name]" placeholder="NAME" value="<%=found.name%>">		
			</div>
			<div class="form-group">
			<input class="form-control" type="text" name="details[image]" placeholder="IMAGE URL" value="<%=found.image%>">			
			</div>
			<div class="form-group">
			<input class="form-control" type="text" name="details[desc]" placeholder="Description" value="<%=found.desc%>">			
			</div>
			<div class="form-group">
			<button class="btn btn-primary btb-lg btn-block">
			UPDATE
			</button>
			</div>
			<div class="form-group">
			<a class="btn btb-lg btn-block" href="/campground/<%=found._id%>">
			Go Back
			</a>
			</div>
		</form>	
	</div>	
	</div>
	
</div>

<%- include("../partials/footer") %>